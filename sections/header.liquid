<header>
  <!-- Currency Selector -->
  <div class="currency-picker">
    {% form 'localization' %}
      <select name="currency_code">
        {% for currency in shop.enabled_currencies %}
          <option value="{{ currency.iso_code }}" {% if cart.currency.iso_code == currency.iso_code %}selected{% endif %}>
            {{ currency.iso_code }} ({{ currency.symbol }})
          </option>
        {% endfor %}
      </select>
      <button type="submit">Apply</button>
    {% endform %}
  </div>

  <!-- Language Selector -->
  <div class="language-picker">
    {% form 'localization' %}
      <select name="locale_code">
        {% for locale in shop.published_locales %}
          <option value="{{ locale.iso_code }}" {% if locale.iso_code == request.locale.iso_code %}selected{% endif %}>
            {{ locale.endonym_name }}
          </option>
        {% endfor %}
      </select>
      <button type="submit">Apply</button>
    {% endform %}
  </div>

  <!-- Wishlist Button (Requires App Integration) -->
  <a href="/pages/wishlist" class="wishlist-link">
    <!-- Heart icon snippet missing; icon removed -->
    Wishlist
  </a>

  <!-- Dynamic Navigation -->
  <nav>
    {% for link in linklists.main-menu.links %}
      <a href="{{ link.url }}" {% if link.active %}class="active"{% endif %}>{{ link.title }}</a>
    {% endfor %}
  </nav>
</header>